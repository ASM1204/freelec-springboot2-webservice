{{>layout/header}}
<div id="wrapper">
    <div id="main">
        <!-- Nav -->
        <nav id="nav">
            <a href="#me" class="icon fa-home active"><span>Home</span></a>
            <a href="#auction" class="icon fa-star"><span>Auction</span></a>
            <a href="#shop" class="icon fa-shopping-cart"><span>Shop</span></a>
            <a href="#notice" class="icon fa-th-large"><span>Notice</span></a>
            <a href="#board" class="icon fa-th-list"><span>Board</span></a>
            <a href="#write" class="icon fa-pencil"><span>Write</span></a>
            <a href="#rank" class="icon fa-trophy"><span>Rank</span></a>
            <a href="#download" class="icon fa-download"><span>Download</span></a>
        </nav>
        <article class="panel">
            <h1>아이템 등록</h1><br>
            <form action="#" method="post">

                <div class="col-md-12">
                    <div class="col-md-4">
                        <form>
                            <div class="form-group">
                                <a href="#" class="image fit"><img src={{buy.item_image}} alt=""></a>
                            </div>
                            <div class="form-group" style="position:absolute; visibility:hidden;">
                                <label for="auction_item_id">등록번호</label>
                                <input type="text" class="form-control" id="auction_item_id" value="{{buy.auction_id}}"
                                       readonly>
                            </div>
                            <div class="form-group">
                                <label for="auction_item_name">아이템 이름</label>
                                <input type="text" class="form-control" id="auction_item_name" value="{{buy.item_name}}"
                                       readonly>
                            </div>
                            <div class="form-group">
                                <label for="auction_item_type">아이템 타입</label>
                                <input type="text" class="form-control" id="auction_item_type" value="{{buy.item_type}}"
                                       readonly>
                            </div>
                            <div class="form-group">
                                <label for="auction_item_price">아이템 가격</label>
                                <input type="text" class="form-control" id="auction_item_price"
                                       value="{{buy.item_price}}" readonly><br>
                            </div>
                            <div class="form-group">
                                <label for="auction_my_berry">나의 Berry</label>
                                <input type="text" class="form-control" id="auction_my_berry" value="{{all_user.berry}}"
                                       readonly><br>
                            </div>
                            <div class="form-group">
                                <label for="auction_author"> 판매자 </label>
                                <input type="text" class="form-control" id="auction_author" value="{{buy.author}}"
                                       readonly>
                            </div>
                            <div class="form-group" style="position:absolute; visibility:hidden;">
                                <label for="auction_my_name"> 구매자 </label>
                                <input type="text" class="form-control" id="auction_my_name" value="{{all_user.email}}"
                                       readonly>
                            </div>
                        </form>
                        <button type="button" class="btn btn-primary" id="btn-trade">구매</button>
                        <a href="/#auction" role="button" class="btn btn-secondary">취소</a>
                    </div>
                </div>
            </form>
        </article>
    </div>

{{>layout/footer}}