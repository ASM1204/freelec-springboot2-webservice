{{>layout/header}}
<div id="wrapper">
    <!-- Nav -->
    <nav id="nav">
        <a href="/#me" class="icon fa-home active"><span>Home</span></a>
        <a href="/#auction" class="icon fa-star"><span>Auction</span></a>
        <a href="/#shop" class="icon fa-shopping-cart"><span>Shop</span></a>
        <a href="/#notice" class="icon fa-th-large"><span>Notice</span></a>
        <a href="/#board" class="icon fa-th-list"><span>Board</span></a>
        <a href="/#write" class="icon fa-pencil"><span>Write</span></a>
        <a href="/#rank" class="icon fa-trophy"><span>Rank</span></a>
        <a href="/#download" class="icon fa-download"><span>Download</span></a>
    </nav>
    <div id="main">
        <article class="panel">
            <form action="#" method="post">
                <div class="form-group" style="position:absolute; visibility:hidden;">
                    <label for="notice_id">글 번호</label>
                    <input type="text" class="form-control" id="notice_id" value="{{notice.notice_id}}"
                           readonly>
                </div>
                <div class="6u 12u$(mobile)">
                    <input type="text" class="form-control" id="notice_title" value="{{notice.title}}">
                </div>
                <div class="6u$ 12u$(mobile)">
                    <input type="text" class="form-control" id="notice_author" value="{{notice.author}}"
                           readonly>
                </div>

                <div class="form-group" style="position:absolute; visibility:hidden;">
                    <label for="check_email"> 작성자 이메일 </label>
                    <input type="text" class="form-control" id="check_email" value={{email}} readonly>
                </div>
                <div class="12u$">
                    <textarea class="form-control" id="notice_content" rows="8">{{notice.content}}</textarea>
                </div>
                <a href="/#notice" role="button" class="btn btn-secondary">취소</a>
                <button type="button" class="btn btn-primary" id="btn-notice-update">수정 완료</button>
                <button type="button" class="btn btn-danger" id="btn-notice-delete">삭제</button>
            </form>
        </article>
    </div>

{{>layout/footer}}