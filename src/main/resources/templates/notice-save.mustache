{{>layout/header}}

<h1>공지사항 등록</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="notice_title">제목</label>
                <input type="text" class="form-control" id="notice_title" placeholder="제목을 입력하세요">
            </div>
            <div class="form-group">
                <label for="notice_author"> 작성자 </label>
                <input type="text" class="form-control" id="notice_author" value={{userName}} readonly>
            </div>
            <div class="form-group">
                <label for="notice_content"> 내용 </label>
                <textarea class="form-control" id="notice_content" placeholder="내용을 입력하세요"></textarea>
            </div>
        </form>
        <a href="/#notice" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="btn-notice-save">등록</button>
    </div>
</div>

{{>layout/footer}}