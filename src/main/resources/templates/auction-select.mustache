{{>layout/header}}

<h1>아이템 선택</h1>

<div class="col-md-12">
    <div class="col-md-4">


        {{#my}}
            <tr style="text-align:center;">
                <input type="text" class="btn btn-primary" id="select_my_email" value="{{email}}"readonly><br>
                <td>{{name}}님의 아이템 보유현황</td>
            </tr>

            <tr style="text-align:center;">
                <label>faster : {{faster}}개
                    <input type="radio" class="btn btn-primary" name="item_my_count" value="{{faster}}">
                </label>
            </tr>
            <tr style="text-align:center;">
                <label>raider: {{raider}}개
                    <input type="radio" class="btn btn-primary" name="item_my_count" value="{{raider}}">
                </label>
            </tr>
            <tr style="text-align:center;">
                <label>timestop : {{timestop}}개
                    <input type="radio" class="btn btn-primary" name="item_my_count" value="{{timestop}}">
                </label>
            </tr>
        {{/my}}
        <div class="form-group">
            <label for="sell_price">가격</label>
            <input type="text" class="form-control" id="sell_price" placeholder="가격을 입력하세요">
        </div>
        <button type="button" class="btn btn-primary" id="btn-select">선택</button>
        <a href="/#auction" role="button" class="btn btn-secondary">취소</a>

    </div>
    <div>
        {{#item_list}}
            <input type="text" class="btn btn-primary" name="item_id_list" value="{{item_id}}"readonly>
            <input type="text" class="btn btn-primary" name="item_image_list" value="{{item_image}}"readonly>
            <input type="text" class="btn btn-primary" name="item_name_list" value="{{item_name}}"readonly><br>
            <input type="text" class="btn btn-primary" name="item_type_list" value="{{item_type}}"readonly><br>
        {{/item_list}}
    </div>
    </div>
</div>

{{>layout/footer}}